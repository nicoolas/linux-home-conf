#!/bin/bash

export EDITOR=vim

no_color="\[\033[0m\]"

if [ $(whoami) = root ]; then
	ps1_color="\[\033[1;31m\]"
else
	ps1_color="\[\033[1;34m\]"
fi
export PS1="$ps1_color[$no_color\u$ps1_color]$no_color "

if ! ls -id / | grep -q "^2 /"
then
	export PS1="$ps1_color(chroot)$no_color "
fi
export PS1=$PS1"\${PWD}$ps1_color :$no_color "

PS2='>> '

[ -r  ~/.bash_aliases ] && source ~/.bash_aliases
[ -r  ~/.bash_local ] && source ~/.bash_local

